<%= render "nav"%>

<h1 class="text-center mt-3">Welcome to the Wisp Social Media</h1>


<div id="posts">
  <% @posts.each do |p| %>
  <div class="container-fluid d-flex w-100 justify-content-center">
    <div class="border bg-white w-25 d-flex flex-column align-items-start p-3 mt-3 shadow-sm p-3 mb-5 bg-body rounded">
      <h1><%= p.title %></h1>
      <p> <%= p.content%> </p>
      <% like = current_user.likes.find_by(post: @posts) %>
        <% if like.nil? %>
          <%= button_to "Like", likes_path, params: {like: {post_id: p.id}}, method: :post %>
        <% else %>
          <%= button_to "UnLike", like_path(like), method: :delete %>
        <%end%> 
    </div>
  </div>
  <% end %>
</div>
